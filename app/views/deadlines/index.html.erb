<h1>Tabela de Prazos</h1>

<% if @deadlines.any? %>
  <table>
    <thead>
      <tr>
        <th>Distância</th>
        <th>Prazo</th>
      <tr>
    </thead>
    <tbody>
      <% @deadlines.each do |deadline| %>
        <tr>
          <td> <%= deadline.min_distance %> a <%= deadline.max_distance %> Km</td>
          <td> <%= deadline.deadline_days %> dias</td>
          <td> <%= link_to 'Editar',  edit_deadline_path(deadline.id) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>  
  <p>Não existem preços cadastradas.</p>
<% end %>

<div>
  <%= link_to 'Voltar', root_path %>
</div>
<div>
  <%= link_to 'Cadastrar Prazo',  new_deadline_path %>
</div>