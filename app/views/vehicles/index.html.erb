<h1>Veículos</h1>

<% if @vehicles.any? %>
  <table>
    <thead>
      <tr>
        <th>Marca</th>
        <th>Placa</th>
        <th>Modelo</th>
        <th>Ano</th>
        <th>Capacidade</th>
      <tr>
    </thead>
    <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td> <%= vehicle.brand_name %> </td>
          <td> <%= vehicle.plate %> </td>
          <td> <%= vehicle.model %> </td>
          <td> <%= vehicle.year_manufacture %> </td>
          <td> <%= vehicle.capacity %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>  
  <p>Não existem veículos cadastrados.</p>
<% end %>

<div>
  <%= link_to 'Cadastrar Veículo', new_vehicle_path %>
</div>